<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>be.unlock:jrocks-core</include>
            </includes>
            <binaries>
                <outputDirectory>jrocks</outputDirectory>
                <includes>
                    <include>be.unlock:jrocks-core</include>
                </includes>
                <excludes>
                    <exclude>be.unlock:jrocks-core:jar:run:0.0.1:compile</exclude>
                </excludes>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>be.unlock:jrocks-plugin-bean:jar:</include>
            </includes>
            <binaries>
                <outputDirectory>jrocks/plugins</outputDirectory>
                <includes>
                    <include>be.unlock:jrocks-plugin-bean</include>
                </includes>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>be.unlock:jrocks-package:jar:</include>
            </includes>
            <sources>
                <fileSets>
                    <fileSet>
                        <includes>
                            <include>**/*.sh</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
    <files>
        <file>
            <source>src/main/resources/install.sh</source>
            <outputDirectory>jrocks</outputDirectory>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </file>
    </files>
</assembly>
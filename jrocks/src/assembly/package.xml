<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/jrocks/plugins</outputDirectory>
            <includes>
                <include>*:jrocks-plugin-bean-rocker:*</include>
                <include>*:jrocks-plugin-bean-javapoet:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/jrocks</outputDirectory>
            <includes>
                <include>*:jrocks-core:*:run</include>
            </includes>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>src/main/resources/install.sh</source>
            <outputDirectory>jrocks</outputDirectory>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </file>
    </files>
</assembly>
